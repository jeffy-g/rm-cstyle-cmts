{
  "compilerOptions": {
    "newLine": "LF",
    "incremental": true,
    "tsBuildInfoFile": "./logs/cjs.tsbuildinfo",
  
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "strict": true,
    "removeComments": false,

    "moduleResolution": "node",

    "target": "es2019",
    "module": "commonjs",

    // Avoid explicitly setting the `sourceMap` option, for code coverage to indicate the exact line.
    // "sourceMap": false,

    "baseUrl": "./src",
    "outDir": "./build/cjs"
  },
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ],
  "include": [
    "./src"
  ],
}
